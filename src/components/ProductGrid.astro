---

<section class="brand-grid">
  <div class="container">
    <h2 class="section-title">Check Camera Pricing by Brand</h2>
    <p class="section-subtitle">Compare prices, specifications, and features from top camera manufacturers worldwide</p>

    <div class="grid">
      {brands.map((brand) => (
        <div class="brand-card">
          <div class="brand-logo">
            <img src={brand.logo} alt={brand.name + ' logo'} />
          </div>
          <div class="brand-content">
            <h3 class="brand-name">{brand.name}</h3>
            <p class="brand-description">{brand.description}</p>
            <a href={brand.url} class="brand-link">Check Camera Pricing â†’</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .brand-grid {
    padding: 80px 0;
    background-color: white;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 16px;
  }

  .section-title {
    font-size: 36px;
    margin-bottom: 15px;
    text-align: center;
    font-family: 'SohneHalbfett', sans-serif;
    color: #262c2b;
  }

  .section-subtitle {
    font-size: 18px;
    color: #666;
    text-align: center;
    margin-bottom: 50px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
  }

  .brand-card {
    background-color: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }

  .brand-card:hover {
    transform: translateY(-4px);
    border-color: #d1d5db;
  }

  .brand-logo {
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    background-color: #f8fafc;
    border-radius: 0;
    padding: 12px;
    flex-shrink: 0;
  }

  .brand-logo img {
    max-height: 76px;
    max-width: 76px;
    object-fit: contain;
  }

  .brand-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .brand-name {
    font-size: 20px;
    margin-bottom: 8px;
    font-family: 'SohneHalbfett', sans-serif;
    color: #1f2937;
    line-height: 1.2;
  }

  .brand-description {
    font-size: 14px;
    line-height: 1.5;
    color: #6b7280;
    margin-bottom: 20px;
    flex: 1;
  }

  .brand-link {
    color: #3b82f6;
    font-family: 'SohneHalbfett', sans-serif;
    font-size: 14px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: color 0.2s ease;
    margin-top: auto;
    align-self: flex-start;
  }

  .brand-link:hover {
    color: #2563eb;
  }

  @media (max-width: 768px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .section-title {
      font-size: 28px;
    }

    .section-subtitle {
      font-size: 16px;
    }

    .brand-card {
      padding: 16px;
    }

    .brand-logo {
      width: 80px;
      height: 80px;
      margin-bottom: 12px;
      padding: 10px;
      border-radius: 0;
    }

    .brand-logo img {
      max-height: 60px;
      max-width: 60px;
    }

    .brand-name {
      font-size: 18px;
    }
  }

  @media (max-width: 480px) {
    .grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 24px;
    }
  }
</style>
