    url: "#"
  },
  {
    id: "5",
    brand: "Panasonic",
    model: "Lumix S5 II",
    type: "Mirrorless",
    resolution: "24.2MP",
    sensor: "Full Frame",
    price: "$1,999",
    url: "#"
  },
  {
    id: "6",
    brand: "OM System",
    model: "OM-1",
