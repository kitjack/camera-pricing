  {
    id: "1",
    brand: "Canon",
    model: "EOS R5",
    type: "Mirrorless",
    resolution: "45MP",
    sensor: "Full Frame",
    price: "$3,899",
    url: "#"
  },
  {
    id: "2",
    brand: "Sony",
    model: "Alpha a7 IV",
    type: "Mirrorless",
    resolution: "33MP",
    sensor: "Full Frame",
    price: "$2,499",
    url: "#"
  },
  {
    id: "3",
    brand: "Nikon",
    model: "Z8",
    type: "Mirrorless",
    resolution: "45.7MP",
    sensor: "Full Frame",
    price: "$3,999",
